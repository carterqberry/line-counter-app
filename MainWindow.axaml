<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="LineCounterApp.MainWindow"
        Title="Disk File Line Count">
    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox Name="FilePathTextBox" Width="400" Watermark="Enter file path here..." HorizontalAlignment="Center"/>
        <Button Name="CountLinesButton" Content="Count Lines" Click="OnCountLinesButtonClick" Margin="0,10,0,0" HorizontalAlignment="Center"/>
        <TextBlock Name="RunningLineCountTextBlock" Text="Running Count: 0" Margin="0,10,0,0" HorizontalAlignment="Center"/>
        <TextBlock Name="FinalLineCountTextBlock" Text="Final Count: 0" Margin="0,10,0,0" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
